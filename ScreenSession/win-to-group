#!/bin/sh
SESSIONNAME=$1

if [ $# -eq 1 ]; then
    $SCREENBIN -S $SESSIONNAME -Q @group
    exit 0
fi

GROUPNAME=$2
shift 2

if [ $# -eq 0 ]; then
    $SCREENBIN -S $SESSIONNAME -X group $GROUPNAME
else
    for window in "$@"
    do
        #$SCREENBIN -S $SESSIONNAME -X at $window group $GROUPNAME
        $SCREENBIN -S $SESSIONNAME -p $window -X group $GROUPNAME
    done
fi
